{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commentaires de l'article"{{ article.title }}"</h1>

    <table class="table">
        <tr>
            <th>Utilisateur</th>
            <th>Date</th>
            <th>Contenu</th>
        </tr>
        {% for comment in article.comments %}
            <tr>
                <td>{{ comment.user }}</td>
                <td>{{ comment.publication|date('d/m/Y H:i:s') }}</td>
                <td>{{ comment.content }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
